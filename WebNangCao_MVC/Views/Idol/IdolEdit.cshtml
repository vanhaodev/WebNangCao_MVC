@{
    @model WebNangCao_MVC.Models.Idol.IdolProfile
}
<div class="row justify-content-md-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                Sửa idol (@Html.DisplayFor(model => model.id))
            </div>
            <div class="card-body">
                @using (Html.BeginForm("IdolEdit", "Idol", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <p>Idol id (read only)</p>
                        @Html.TextBoxFor(m => m.id, "", new { @class = "form-control", @placeholder = "id", @readonly="readonly" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.fullName, "", new { @class = "form-control", @placeholder = "Full name"})
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.avatar, new { @class = "form-control", @placeholder = "Avatar url"})
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "Description"/*, @value = @Html.DisplayFor(model => model.description) */})
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="IdolEdit" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
