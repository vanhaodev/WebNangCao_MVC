@model WebNangCao_MVC.Models.Idol.IdolProfile
@{
}
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Thêm idol mới
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AddNewIdol", "Idol", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.fullName, "", new { @class = "form-control", @placeholder = "Full name" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.avatar, new { @class = "form-control", @placeholder = "Avatar url" })
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.avatar, new { @class = "form-control", @placeholder = "Description" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="AddNewIdol" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
